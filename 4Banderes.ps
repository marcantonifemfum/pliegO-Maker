/elTEXT exch def

elTEXT dup length string copy /QUEDAxCOMPONDRE exch def  %% ens anirem menjant progressivament el text de la composició

1024 /buff exch def  %% capacitat màxima de caràcters d'una línia
/aMPLES buff array def  %% array amb el amples de cadascún dels caràcters
/FINSreng 0 def  %% nombre de caràcters totals llegits
buff string /reng exch def  %% mai una línia tindrà tants caràcters
reng /NullEncode filter /fotli exch def  %% escriurem els mots d'1 línia dins la cadena reng
/rqtp 1 string def  %% baula que treballa com a fitxer d'escriptura per capturar cadascun dels caràcters
/cSEP 32 def  %% codi del caràcter separador de mots
/aCOMPON 0 array def  %% array total de composició línia a línia

{  %% loop
 QUEDAxCOMPONDRE
 {  %% forall
  rqtp exch 0 exch put  %% facim amb el caràcter
  rqtp 1 string copy /rqtp exch def  %% descontaminem
  rqtp stringwidth pop dup faLinia add dup maxL gt
  {  %% hem superat l'ample de línia
   /sobRErs 0 def  %% caràcters sobrers que cal passar a la línia següent
   pop pop faLinia /faLinia exch def  %% què fa la línia just abans que superem l'ample permés
   fotli flushfile  %% que no s'encanti res
   %% extirpem els arrays nets de caràcters i amples
   reng 0 FINSreng getinterval /cNET exch def
   aMPLES 0 FINSreng getinterval /aNET exch def
   /NOpodemTRENCAR true def  %% detectem possibles línies d'1 sol mot que no podem trecar via /cSEP i ens caldria guionar-les

   FINSreng 1 sub -1 0  %% tirem enrera fins que trobem el caràcter separador
   {  %% for que treballem directament amb la cadena de text sencera
    cNET exch get cSEP eq  %% és un caràcter separador?
    {
     sobRErs 1 add /sobRErs exch def
     /NOpodemTRENCAR false def
     exit
    }
    {
     sobRErs 1 add /sobRErs exch def
    }ifelse
   }for

   NOpodemTRENCAR  %% no hem trobat el caràcter separador?
   {  %% si un mot execedeix l'ample de columna, ara li posem sencer senser trencar sil·làbicament
    (\n\n >>> línia d'1 sol mot que NO podem trencar: )print flush
    QUEDAxCOMPONDRE print flush
    ( ...malgrat tot li posem sencer!\n)print flush
    /AViS true def  %% gatell per saber si a totB# haurem d'escriure 1 per fer notar que hi ha avisos 
    QUEDAxCOMPONDRE 1 string dup 0 cSEP put search
    {
     exch pop dup stringwidth pop 2 array astore
    }
    {  %% en condicions normals ha de ser la darrera línia del text
     dup stringwidth pop 2 array astore () exch
    }ifelse
    aCOMPON length dup /araVa exch def 1 add array dup 0 aCOMPON putinterval dup 3 -1 roll araVa exch put /aCOMPON exch def

    dup length 0 eq
    {  %% a null per saber que som en una línia cega fruit del final d'un text on el darrer mot no cap dins l'espai establert
     pop null /QUEDAxCOMPONDRE exch def  %% evitem que es compongui una línia en blanc a sota
    }
    {
     /QUEDAxCOMPONDRE exch def  %% la nova string que queda per compondre
    }ifelse
   }
   {
    %% muntem les dades a l'array total de composició línia
    cNET 0 FINSreng sobRErs sub getinterval  %% cadena a compondre
    0 aNET 0 FINSreng sobRErs sub getinterval {add}forall  %% ample total de la línia
%dup length string copy  %% cadena de caràcters a compondre
    2 array astore  %% array de composició de la línia amb la cadena a compondre i l'stringwidth
    %% faLinia  %% no caldrà jugar-hi més?
    aCOMPON length dup /araVa exch def 1 add array dup 0 aCOMPON putinterval dup 3 -1 roll araVa exch put /aCOMPON exch def

    %% inicialitzem variables
    /DEreng FINSreng sobRErs sub def  %% índex temporal per extirpar des l'inici del caràcter de la línia següent
    QUEDAxCOMPONDRE dup length DEreng sub DEreng exch getinterval  %% ens anirem menjant progressivament el text a compondre
    dup 0 get cSEP eq  %% contemplem l'excepció que ens quedi el caràcter separador al principi de cadena
    {
     dup length 1 sub 1 exch getinterval
    }if
%dup length string copy
    /QUEDAxCOMPONDRE exch def  %% la nova string que queda per compondre
   }ifelse
   /FINSreng 0 def  %% nombre de caràcters que componem a la línia actual
   /aMPLES buff array def  %% array amb el amples de cadascún dels caràcters
   /faLinia 0 def  %% ample de la línia actual
   buff string /reng exch def  %% mai una línia tindrà tants caràcters
   reng /NullEncode filter /fotli exch def  %% escriurem els mots d'1 línia dins la cadena reng
   exit  %% sortim del forall
  }
  {  %% encara componem
   /faLinia exch def
   aMPLES exch FINSreng exch put  %% farcim l'array amb l'ample
   fotli rqtp writestring
   FINSreng 1 add /FINSreng exch def
  }ifelse
 }forall

 QUEDAxCOMPONDRE null eq  %% evitem que es compongui una línia en blanc a sota
 {
  exit
 }
 {
  QUEDAxCOMPONDRE stringwidth pop dup maxL le  %% el que queda per compondrei hi cap en 1 línia?
  {
   %% muntem a l'array total les dades de la darrera línia
   QUEDAxCOMPONDRE exch
%dup length string copy  %% cadena de caràcters a compondre
   2 array astore  %% array de composició de la línia amb l'stringwidth i la cadena a compondre
   %% faLinia  %% no caldrà jugar-hi més?
   aCOMPON length dup /araVa exch def 1 add array dup 0 aCOMPON putinterval dup 3 -1 roll araVa exch put /aCOMPON exch def
   exit
  }
  {
   pop
  }ifelse
 }ifelse

}loop

