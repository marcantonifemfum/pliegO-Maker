%% anàlisi de col·lisions fent un garigot a l'atzar, dinàmicament, entre un path actiu i un upath
%save
%250 250 translate
%% format en funció dels paràmetres ample i alt (sempre enters!) q condicionaran el marc gràfic de l'aleatori de Beziers
300 /amplE exch def
300 /alT exch def
<<
  /PageSize[amplE alT]
%  /HWResolution [4000 4000]  %% la precisió juga per aquí i pel flatness
>>setpagedevice


/rc
{
 rand amplE mod
 rand alT mod
} bind def  %% punt aleatori
/mb { rc rc rc curveto } bind def  %%  corba Bezier atzarosa
/bezes
{
 realtime srand  %% es clau plantar la llavor cada cop que cridem rrand
 rrand
% newpath
 rc 2 copy moveto
 rand
 6 mod  %% com més gran és el valor, m´3s gran és la complexitat del garigot
 {mb} repeat 
 rc rc 6 -2 roll curveto
 closepath cleartomark
} bind def
/B
{
 mark bezes
 % stroke
} bind def
/iRGB 0 def
/repeatB
{
 1
 {
%  gsave
  % és curiós que malgrat aïllem l'estat gràfic, si activem les transparències
  % deixa de funcionar l'efecte de tac sòlid de l'overprint... i no sé q passaria imprimint...
  %[ /ca .5 /CA .5 /BM /Normal /SetTransparency pdfmark
%  [
%   (1 0 0 setcolor)
   %(1 0 1 setcolor)
   %(0 0 1 setcolor)
   %(0 0 0 setcolor)
%  ]
%  iRGB get cvx exec
%  iRGB 0 eq {/iRGB 0 def}{iRGB 1 add /iRGB exch def}ifelse
  B  % la corba aleatòria
%  grestore
 }repeat
} def
repeatB

%restore
%stroke
%false upath  %% el procediment upath que descriu el planxat dins una proc, o sigui un userpath

%dup
%dup 1 setlinewidth 1 0 0 setrgbcolor cvx exec stroke

flattenpath  %% planxem
false upath  %% deixa l'upath a l'stack

  newpath
%dup 0 11 getinterval exch
%0 setlinewidth 0 0 0 setrgbcolor cvx exec stroke

%inustroke ==  %% col·lisonen?

%dup ustroke  %% pintem en negre el garigot planxat

dup length 4 sub /Ngarigot exch def  %% nombre d'elements del garigot, menys 4 perquè eliminem closepath i el darrer x y lineto

cvlit
%dup length array copy
/Ugarigot exch def  %% necessitem convertir a literal l'upath del garigot per poder-lo desar

Ugarigot 0 5 getinterval /capUpath exch def  %% cap de l'upath que desarem a la capçalera de cada fragment
/iu 17 def  %% índex inicial per eliminar els elements de 3 en 3 de l'userpath (2 coordenades i 1 operador per lineto)
/iT 8 def  %% índex incial del tram de planxat a extraure per avaluar si col·lisiona

{  %% loop per avaluar cada fragment del tram de planxat (path actiu), si col·lisiona amb la resta del garigot (upath)
 0 setlinewidth 0 setlinecap  %% en assegurem que els vectorials treballin a la màxima precisió
 gsave
 newpath
 Ugarigot
dup length array copy
 iT 6 getinterval
 dup 2 {moveto} putinterval  %% xafem el lineto amb moveto
 dup
%dup length array copy
 /clls exch def  %% desem el segment per si cal pintar-lo

% cvx exec  %% ara el tram de planxat treballa com un path actiu
 dup length 5 add array dup 3 -1 roll 5 exch putinterval
 dup 0 capUpath putinterval  %% hi afegim el setbbox perquè treballi com un upath

 iT 3 add /iT exch def  %% actualitxem l'índex per llegir el següent tram planxat
 %% tenim el tram planxat per avaluar a l'stack
 Ugarigot 
dup length array copy
 iu  %% començant just pel tram següent +1 per no autoxafar-nos
 Ngarigot iu sub getinterval  %% fem l'extracció de l'userpath del garigot
%dup length array copy
 dup 2 {moveto} putinterval  %% xafem el lineto amb moveto
 dup length 5 add array dup 3 -1 roll 5 exch putinterval
 dup 0 capUpath putinterval  %% hi afegim el setbbox
 iu 3 add /iu exch def  %% actualitxem l'índex per anar restar trams a l'upath del garigot
 cvx  %% tenim l'upath actiu a l'stack

%% col·lisonen?
% instroke  %% path actiu vs upath (funciona de manera que quan detecta l'encreuament no es desactiva el true fins el proper)
 inustroke  %% upath vs upath (funciona correctament activant només el tram que col·lisiona)

 {
  (- - X - -)==
  gsave
  1 0 0 setrgbcolor 1 setlinewidth 0 setlinecap
  clls cvx exec stroke
  grestore
  newpath
 }
 {
%% desactiveu si voleu veure com corre el tram pel path (pàgina a pàgina)
%  gsave
%  0 0 0 setrgbcolor 1 setlinewidth 0 setlinecap
%  clls cvx exec stroke
%  grestore
  newpath
 }ifelse

%% desactiveu si voleu veure com corre el tram pel path (pàgina a pàgina)
% gsave
% 0 setlinewidth 0 0 0 setrgbcolor 0 setlinecap
% Ugarigot cvx exec stroke
% grestore
% showpage
 grestore

 iu Ngarigot ge
 {
  exit
 }if
}loop

%% pinta el garigot aleatori només 1 cop
 gsave
 0 setlinewidth 0 0 0 setrgbcolor 0 setlinecap
 Ugarigot cvx exec stroke
 grestore
 showpage


